{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES6",
    "module": "ES2015",
    "moduleResolution": "node",
    "outDir": "./dist", // Output directory for TypeScript files
    "rootDir": "./", // Source directory for TypeScript files (both client and server)
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["client/src/**/*.ts", "client/src/**/*.tsx", "server/**/*.ts"], // Include TypeScript files from both client and server
  "exclude": ["node_modules"]
}
